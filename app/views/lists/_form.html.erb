<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row form-group">
      <div class="col-sm-8 col-md-6">
	  <%= f.label "Name*" %>
	  <%= f.text_field :name, class: "form-control", placeholder: "5-100 characters, no colons" %>
      </div>
  </div>

  <div class="row form-group">
      <div class="col-sm-10 col-md-8">
    <%= f.label :short_description %>
    <%= f.text_field :short_description, class: "form-control" %>
    </div>
  </div>


  <div class="row form-group">
      <div class="col-sm-10 col-md-8">
	  <%= f.label :description %>
	  <%= f.text_area :description, class: "textarea_medium form-control", size: '6x8' %>
      </div>
  </div>

  <div class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default" onclick="$('#radio_open').trigger('click')">Open</button>
      <button type="button" class="btn btn-default" onclick="$('#radio_closed').trigger('click')">Closed</button>
      <button type="button" class="btn btn-default" onclick="$('#radio_private').trigger('click')">Private</button>
  </div>
  
  <div class="row">
      <%= f.radio_button :access, 0, class: 'btn btn-default', id: 'radio_open', style: "display: none" %>
      <%= f.radio_button :access, 1, class: 'btn btn-default', id: 'radio_closed', style: "display: none"  %>
      <%= f.radio_button :access, 2, class: 'btn btn-default', id: 'radio_private', style: "display: none"  %>
  </div>
  
  <div class="row form-group">
      <div class="col-sm-8 col-md-6">
    <%= f.check_box :is_ranked %>
	  <%= f.label :ranked %>
	  </div>
  </div>

  <% if @list.creator_user_id == current_user.id %>
    <div class="row form-group">
      <div class="col-sm-8 col-md-6">
        <%= f.check_box :is_private %>
        <%= f.label :is_private %>
      </div>
    </div>
  <% end %>

  <% if current_user.has_legacy_permission("admin") %>
      <div class="row form-group">
	  <div class="col-sm-8 col-md-6">
	<%= f.check_box :is_admin %>  
	      <%= f.label "Admin only" %>
	      </div>
    </div>

    <div class="row form-group">
	<div class="col-sm-8 col-md-6">
	<%= f.check_box :is_featured %>  
	    <%= f.label :featured %>
	    </div>
    </div>
  <% end %>

  <div class="row form-group">
      <div class="col-sm-6 col-md-6">
    <%= f.label "Custom field name" %>
	  <%= f.text_field :custom_field_name, class: "form-control", placeholder: "name of editable field providing context for each entity" %>
	  </div>
  </div>

  <br />

  <div class="row">
      <div class="col-sm-8 col-md-6">
	  <div class="actions">
	      <%= f.submit "Save", class: "btn btn-primary" %>
	  </div>
      </div>
  </div>
<% end %>

<div id="entity-header" class="row">
  <div id="entity-name"><%= entity_link(entity) %></div>
  <div id="entity-blurb-wrapper">
    <% if user_signed_in? && current_page?(controller: 'entities', action: 'show') %>
      <%= render partial: 'editable_blurb', locals: { entity: entity } %>
    <% else %>
      <span id="entity-blurb-text"><%= entity.blurb %></span>
    <% end %>
  </div>
</div>

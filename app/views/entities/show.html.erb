<div class="container-fluid">
    <%= render partial: 'header', locals: { entity: @entity } %>
    <%= render partial: 'actions', locals: { entity: @entity, current_user: @current_user } %>
    <div class="row top-1em">
        <div class="col-md-8 col-sm-8">
            <%= render partial: 'summary', locals: { entity: @entity } %>
            <%= render partial: 'tabs', locals: { active_tab: 'relationships', entity: @entity }  %>

            <div id='relationship_tabs_content'>

                <% if @business_positions.count > 0 %>
                    <div class='subsection'>Business Positions</div>
                    <div class='relationship-section'>
                        <% @business_positions.each do |l| %>
                            <%= render partial: "relationship", locals: { relationship: l.relationship, related: l.related, description: l.relationship.description1 } %>
                        <% end %>
                    </div>
                <% end %>

                <% if @family.count > 0 %>
                    <div class='subsection'>Family</div>
                    <div class='relationship-section'>
                        <% @family.each do |l| %>
                            <% description = l.is_reverse ? l.relationship.description1 : l.relationship.description2 %>
                            <%= render partial: "relationship", locals: { relationship: l.relationship, related: l.related, description: description } %>
                        <% end %>
                    </div>
                <% end %>

                <% if @donation_recipients.count > 0 %>
                    <div class='subsection'>Donation Recipients</div>
                    <div class='relationship-section'>
                        <% @donors.each do |l| %>
                            <%= render partial: "relationship", locals: { relationship: l.relationship, related: l.related, description: l.relationship.description1 } %>
                        <% end %>
                    </div>
                <% end %> 

                <% if @friendships.count > 0 %>
                    <div class='subsection'>Friendships</div>
                    <div class='relationship-section'>
                        <% @friendships.each do |l| %>
                            <% description = l.is_reverse ? l.relationship.description1 : l.relationship.description2 %>
                            <%= render partial: "relationship", locals: { relationship: l.relationship, related: l.related, description: description } %>
                        <% end %>
                    </div>
                <% end %>    

            </div>
        </div>
        <div class="col-md-4 col-sm-4">
            <p>side bar will go here...</p>
        </div>
    </div>
    
</div>

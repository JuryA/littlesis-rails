<div class="container-fluid">
    <%= render partial: 'header', locals: { entity: @entity } %>
    <%= render partial: 'actions', locals: { entity: @entity, current_user: @current_user } %>
    <div class="row top-1em">
        <div class="col-md-8 col-sm-8">
            <%= render partial: 'summary', locals: { entity: @entity } %>
            <%= render partial: 'tabs', locals: { active_tab: 'political', entity: @entity }  %>
            <div id="political-contributions" data-entityid="<%= @entity.id %>"></div>
            <h1>Political Page...</h1>
        </div>
        <div class="col-md-4 col-sm-4">
            <div id="political-pie-chart">
                <canvas width="200" height="200"></canvas>
            </div>
        </div>
    </div>

    <script>entity.political.init();</script>
</div>

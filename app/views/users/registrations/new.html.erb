<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.fields_for :sf_guard_user_profile do |profile_fields| %>
        
        <div class="field form-group">
            <%= f.select :default_network_id, Users::RegistrationsController::HOME_NETWORK_IDS %>
        </div>


        <div class="field form-group">
            <%= profile_fields.label :name_first, "First Name" %><br />
            <%= profile_fields.text_field :name_first %>
        </div>
        <div class="field form-group">
            <%= profile_fields.label :name_last, "Last Name" %><br />
            <%= profile_fields.text_field :name_last %>
        </div>

        <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
        </div>
        
        <div class="field form-group">
            <%= f.label :username, "Username" %><br />
            <%= f.text_field :username, autofocus: true %>
        </div>


        <div class="field form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field form-group">
            <p> do you agree to the terms? </p>
            <%= check_box_tag :terms_of_use  %>
        </div>

        <div class="field form-group">
            <p> Would you like to join our newsletter? </p>
            <%= check_box_tag :newsletter %>
        </div>

        <div class="field form-group">
            <%= profile_fields.label :reason, "A little about you and why you're signing up" %><br />
            <%= profile_fields.text_area :reason %>
        </div>

        <div class="actions form-group">
            <%= f.submit "Sign up" %>
        </div>
    <% end %>
<% end %>

<%= render "users/shared/links" %>

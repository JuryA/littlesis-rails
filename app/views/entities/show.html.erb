<div class="container-fluid">
    <%= render partial: 'header', locals: { entity: @entity } %>
    <%= render partial: 'actions', locals: { entity: @entity, current_user: @current_user } %>
    <div class="row top-1em">
        <div class="col-md-8 col-sm-8">
            <%= render partial: 'summary', locals: { entity: @entity } %>
            <%= render partial: 'tabs', locals: { active_tab: 'relationships', entity: @entity }  %>

            <div id='relationship_tabs_content'>

                <% get_section_order(@entity).each do |section| %>
                    <% links = group_relationships_by_entity(order instance_variable_get("@#{section}")) %>
                    <%= display_relationship_section_heading(links.count, @positions.count, @other_positions.count, @memberships.count, section) %>
                    <%= render partial: 'link', collection: links %>
                <% end %>

            </div>
        </div>
        <div class="col-md-4 col-sm-4">
	    <%= render partial: 'sidebar' %>
        </div>
    </div>
    
</div>

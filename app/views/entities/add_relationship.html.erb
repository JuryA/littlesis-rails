<% content_for(:page_title, "#{@entity.name} - Add Relationship") %>
<%= render partial: 'header', locals: { entity: @entity } %>

<div id="entity-info" data-entitytype="<%= @entity.primary_ext %>"  data-entityid="<%= @entity.id %>"></div>

<div class="row">

    <div class="col-sm-7 text-center">
	<h2 class="rel-search">Create a new relationship</h2>
	<p class="rel-search">Find the person or organization you want to add a relationship to. If your search doesn't locate it, you'll have the option to create it below.</p>
	
	<div class="hidden rel-add">
	    <h3 class="text-center">Creating a new relationship between <br /><strong><%= @entity.name %></strong><br /><em>and</em><br /><strong><span id="relationship-with-name"></span></strong></h3>
	</div>

	<div class="row rel-search text-center">
	    <div class="col-sm-2"></div>
	    <div class="col-sm-6">
		<input type="text" class="form-control" placeholder="Name" id="name-to-search" >
	    </div>
	    <div class="col-sm-2"><button class="btn btn-primary" id="search-button">Search</button>
	    </div>
	</div>
	
    </div>

    <div class="col-md-1"><!-- buffer --></div>
    <div class="col-sm-4 hidden-xs">
	<%= image_tag(@entity.featured_image_url, alt: @entity.name, class: 'img-rounded') %>
    </div>

</div>

<div class="row rel-search" id="search-results-row">
    <div class="col-sm-12">
	<table id="results-table" class="compact hover" cellspacing="0" width="100%"></table>
    </div>
</div>

<div class="row rel-add hidden" id="add-relationship-row">
    <div class="col-sm-3" >
	<h6 style="padding-left: 1em;"><strong>Relationship Type:</strong></h6>
	<div id="category-selection"></div>
	
    </div>
    <div class="col-sm-6" id="reference">
	
	<div class="row">
	    <div class="col-sm-12">
		<p class="text-center"><strong>Where is this info coming from?</strong></p>
	    </div>
	</div>
	
	<div class="row">
	    <div class="col-sm-2"></div>
	    <div class="col-sm-10">
		<div><select class="form-control" id="existing-sources-select"></select></div>
	    </div>
	</div>
	
	<div class="thin-grey-bottom-border top-1em"></div>

	<div class="form-horizontal top-1em">

	    <!-- Name -->
	    <div class="form-group">
		<label for="reference-name" class="col-sm-2 control-label">Name*</label>
		<div class="col-sm-10">
		    <input type="text" class="form-control text-left" id="reference-name">
		</div>
	    </div>
	    
	    <!-- Url -->
	    <div class="form-group">
		<label for="reference-url" class="col-sm-2 control-label">Url*</label>
		<div class="col-sm-10">
		    <input type="url" class="form-control text-left" id="reference-url">
		</div>
	    </div>
	    
	    <!-- Date -->
	    <div class="form-group">
		<label for="reference-date" class="col-sm-2 control-label">Publication Date</label>
		<div class="col-sm-10">
		    <input type="text" class="form-control" id="reference-date">
		</div>
	    </div> 

	    <!--Type  -->
	    <div class="form-group">
		<label for="reference-type" class="col-sm-2 control-label">Type</label>
		<div class="col-sm-6">
		    <select class="form-control" id="reference-type">
			<% Reference.ref_type_options.each do |ref_type| %>
			    <%= content_tag('option', ref_type[0], value: ref_type[1]) %>
			<% end  %>
		    </select>
		</div>
	    </div>
	    
	    <!-- Excerpt -->
	    <div class="form-group">
		<label for="reference-excerpt" class="col-sm-2 control-label">Excerpt</label>
		<div class="col-sm-10">
		    <%= text_area_tag 'reference-excerpt', nil, size: "35x6", class: 'form-control'  %>
		</div>
	    </div>

	    <!-- Submit Button -->
	    <div class="form-group" >
		<div class="col-sm-2"></div>
		<div class="col-sm-6 top-1em">
		    <button type="button" class="btn btn-primary" id="create-relationship-btn">Create Relationship</button>
		</div>
	    </div>
	    
	</div> <!-- end of form-forizontal  -->
    </div> <!-- end of col-sm-6  -->
</div>

<%= javascript_tag do %>
    $(document).ready(function(){ 
       addRelationship();
       $('#reference-date').datepicker({ format: "yyyy-mm-dd" });
    });
<% end  %>

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
	<%= render partial: 'entities/sidebar/image' %>
    </div>
</div>

<!-- SOURCE LINKS -->
<div class="row">
    <div class="col-sm-12">
	<%= sidebar_title('Source Links') %>
    </div>
    <div class="col-sm-12 sidebar-references-container">
	<% entity_references = @entity.all_references %>
	<%= sidebar_reference_count(entity_references.count)%>
	<%= sidebar_references(entity_references.take(10))%>
    </div>
</div>

<!-- BASIC INFO -->
<div class="row">
    <div class="col-sm-12">
	<%= sidebar_title('Basic info') %>
    </div>
    <div class="col-sm-12">
	<%= sidebar_basic_info(@entity.basic_info) %>
    </div>
</div>

<!-- ADMIN TOOLS -->
<% if user_signed_in? && current_user.admin? %>
    <div class="row">
	<div class="col-sm-12">
	    <%= sidebar_title('Admin tools') %>
	</div>
	<div class="col-sm-12">
	    <%= link_to 'Addresses', @entity.legacy_url('addresses') %>
	</div>
    </div>
<% end %>

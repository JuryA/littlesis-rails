	<%= form_tag nil, method: :get do %>
		<div class="notes_search_with_pagination">
			<div class="input-group col-xs-6 notes_search">
				<%= text_field_tag :q, params[:q], class: "form-control", placeholder: "Search notes" %>
				<span class="input-group-btn">
					<button type="submit" class="btn btn-default">
						<span class="glyphicon glyphicon-search"></span>
					</input>
				</span>
			</div>

			<%= paginate notes %>
			<div class="clearfix"></div>
		</div>
	<% end %>

<h2>Aliases <small style="padding-left: 10px">additional names for the <%= @entity.org? ? 'entity' : 'person' %></small></h2>

<div class="col-sm-8">
    <p>Click "Primary" to make one of the aliases the default name</p>
</div>
<div class="clearfix"></div>

<div class="col-sm-12 col-md-10 col-lg-8">
    <p> Create an new aliases:</p>
    <form class="form-inline">
	<div class="form-group">
	    <input type="text" class="form-control" id="alias-name-input" required>
	    <button type="submit" class="btn btn-primary">Add</button>
	</div>
    </form>
</div>
<div class="clearfix"></div>

<div class="col-sm-8 col-md-6 top-1em">
    <% if @entity.aliases.size > 1 %>
	<p>Click "make primary" to change the entity's default name</p>
    <% end %>
    
    <ul class="list-group">
    <!-- <ul class="list-unstyled"> -->
	<% @entity.aliases.each do |a| %>
	    <%= render partial: 'edit_alias', locals: { entity_alias: a }%>
	<% end %>
    </ul>
</div>

<div class="top-3em"</div>
